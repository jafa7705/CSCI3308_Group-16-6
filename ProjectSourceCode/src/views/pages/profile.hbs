<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Profile</title>
  <link rel="stylesheet" href="../../resources/css/style.css">
</head>
<body>
  <section class="profile">
    <img src="/uploads/{{user.profile_image}}" alt="Profile Photo" class="profile-photo" style="width: 150px; height: 150px;">

    {{#if isOwner}}
      <button id="edit-profile-button" style="display:;">
        <img src="/resources/img/edit.png" alt="Edit Profile" style="vertical-align: middle; margin-right: 5px;">
        Edit Profile
      </button>
      {{#unless user.isclient}}
        <section class="pending-connections">
          <h3>Pending Requests</h3>
          {{#if pendingRequests.length}}
            <ul>
              {{#each pendingRequests}}
                <li>
                  {{this.client_username}}
                  <form action="/connection/{{this.connection_id}}/accept" method="POST" style="display:inline;">
                    <button type="submit">Accept</button>
                  </form>
                  <form action="/connection/{{this.connection_id}}/reject" method="POST" style="display:inline;">
                    <button type="submit">Reject</button>
                  </form>
                </li>
              {{/each}}
            </ul>
          {{else}}
            <p>No pending requests.</p>
          {{/if}}
        </section>
      {{/unless}}
    {{/if}}

    <div class="profile-info">

      <div class="info-row">
        <h1>@{{user.username}}</h1>
      </div>

      <p id="user-role">
        {{#if user.isclient}} 
            Client
        {{else}}
            Artist
        {{/if}}
      </p>

      <div class="info-row"><h2>Website:</h2></div>
      <p id="website">{{user.website}}</p>

      <div class="info-row"><h2>Location:</h2></div>
      <p id="location">{{user.location}}</p>

      <div class="info-row"><h2>Bio:</h2></div>
      <p id="bio" style="white-space: pre-line;">{{user.bio}}</p>

      {{#if canConnect}}
        <div class="connect-section" style="margin-top: 20px;">
          {{#if connectionExists}}
            {{#if isPending}}
              <button disabled style="background-color: gray; color: white;">Pending Request</button>
            {{else}}
              <button disabled style="background-color: #ccc;">Already Connected</button>
            {{/if}}
          {{else}}
            <form action="/connect/{{user.username}}" method="POST">
              <button type="submit" style="padding: 10px 20px; background-color: #4CAF50; color: white; border: none; border-radius: 4px; cursor: pointer;">
                Request Connection
              </button>
            </form>
          {{/if}}
        {{/if}}
        </div>
      
    </div>
  </section>


  <div class="profile-sections">
  <!-- Connections Section -->
  <section class="connections">
    <h2>Connections:</h2>
    {{#if connections.length}}
        <ul>
            {{#each connections}}
                <li><a href="/profile/{{this.username}}">{{this.username}}</a></li>
                {{#if ../isOwner}}
                    <button class="start-message-btn" data-recipient-id="{{this.user_id}}" style="margin-left: 10px;">
                        <img src="resources/img/messages.png" alt="Message" style="vertical-align: middle; margin-right: 5px; width: 20px; height: 20px;">
                        Message
                    </button>
                {{/if}}
            {{/each}}
        </ul>
    {{else}}
        <p>No connections yet.</p>
    {{/if}}
  </section>

  <!-- Posts Section -->
  <section class="posts" style="max-width: 800px; margin: 40px auto;">
    <h2 style="text-align: center;">Posts by {{user.username}}</h2>
    {{#if posts.length}}
      {{#each posts}}
    
        <article class="post" style="margin-bottom: 30px; padding: 20px; border: 1px solid #ccc; border-radius: 6px;">
         
          <h3>{{title}}</h3>

          {{#if image}}
            <img src="/uploads/{{image}}" alt="Post Image" style="max-width: 100%; height: auto; margin-bottom: 10px;">
          {{/if}}
          
          <p><strong>Category:</strong> {{category}}</p>
          <p><strong>Date:</strong> {{date_created}}</p>
          <p>{{description}}</p>
        </article>
      {{/each}}
    {{else}}
      <p style="text-align: center;">No posts yet.</p>
    {{/if}}
  </section>
</div>

  <div id="editModal" class="modal">
    <div class="modal-content">
      <span class="close">&times;</span>
      <h2>Edit Profile</h2>
      <form action="/profile/update" method="post">
        <label for="edit-profile-pic">Profile Picture:</label>
        <input type="text" id="edit-profile-pic" name="profilePic" value="{{user.profilePic}}"><br><br>

        <label for="edit-website">Website:</label>
        <input type="text" id="edit-website" name="website" value="{{user.website}}"><br><br>

        <label for="edit-location">Location:</label>
        <input type="text" id="edit-location" name="location" value="{{user.location}}"><br><br>

        <label for="edit-bio">Bio:</label><br>
        <textarea id="edit-bio" rows="4" cols="50" name="bio">{{user.bio}}</textarea><br><br>

        <button id="save-profile-changes" type="submit">Save Changes</button>
      </form>
    </div>
  </div>

  <script src="resources/js/index.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const modal = document.getElementById('editModal');
      const btn = document.getElementById('edit-profile-button');
      const span = document.getElementsByClassName('close')[0];

      if (btn) {
        btn.onclick = function () {
          modal.style.display = 'block';
        };
      }

      if (span) {
        span.onclick = function () {
          modal.style.display = 'none';
        };
      }

      window.onclick = function (event) {
        if (event.target === modal) {
          modal.style.display = 'none';
        }
      };
    });
  </script>
  <script>
  document.addEventListener('DOMContentLoaded', function() {
    const messageButtons = document.querySelectorAll('.start-message-btn');
    messageButtons.forEach(button => {
      button.addEventListener('click', function() {
        const recipientId = this.getAttribute('data-recipient-id');
        window.location.href = `/messages?recipientId=${recipientId}`;
      });
    });
  });
 </script>
</body>
</html>