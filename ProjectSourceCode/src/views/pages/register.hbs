<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
</head>
<body>
    <div style="max-width: 500px; margin: 0 auto; padding: 20px; border: 1px solid #ccc; border-radius: 8px; background-color: #f9f9f9;">
        <h1 style="text-align: center;">Register</h1>

        {{#if message}}
        <div style="margin-bottom: 15px; padding: 10px; background-color: #f8d7da; color: #721c24; border: 1px solid #f5c6cb; border-radius: 4px;">
            {{message}}
        </div>
        {{/if}}

        {{#if success}}
        <div style="margin-bottom: 15px; padding: 10px; background-color: #d4edda; color: #155724; border: 1px solid #c3e6cb; border-radius: 4px;">
            {{success}}
        </div>
        {{/if}}

        <form action="/register" method="POST">

            <div class="mb-3" style="margin-bottom: 15px;">
                <label for="accountType" style="font-weight: bold;">Account Type</label>
                <select id="accountType" name="accountType" required style="width: 100%; padding: 8px; margin-top: 5px; border-radius: 4px; border: 1px solid #ccc;">
                    <option value="" disabled selected>Select account type</option>
                    <option value="user">Artist</option>
                    <option value="client">Client</option>
                </select>
            </div>

            <div class="mb-3" style="margin-bottom: 15px;">
                <label for="username" style="font-weight: bold;">Username</label>
                <input type="text" id="username" name="username" required style="width: 100%; padding: 8px; margin-top: 5px; border-radius: 4px; border: 1px solid #ccc;">
            </div>

            <div class="mb-3" style="margin-bottom: 15px;">
                <label for="email" style="font-weight: bold;">Email Address</label>
                <input type="email" id="email" name="email" required style="width: 100%; padding: 8px; margin-top: 5px; border-radius: 4px; border: 1px solid #ccc;">
                <div style="font-size: 0.9em; color: #555;">We'll never share your email with anyone else.</div>
            </div>

            <div class="mb-3" style="margin-bottom: 15px;">
                <label for="password" style="font-weight: bold;">Password</label>
                <input type="password" id="password" name="password" required style="width: 100%; padding: 8px; margin-top: 5px; border-radius: 4px; border: 1px solid #ccc;">
            </div>

            <div class="mb-3" style="margin-bottom: 15px;">
                <label for="confirmPassword" style="font-weight: bold;">Confirm Password</label>
                <input type="password" id="confirmPassword" name="confirmPassword" required style="width: 100%; padding: 8px; margin-top: 5px; border-radius: 4px; border: 1px solid #ccc;">
            </div>

            <input type="hidden" id="isClientHidden" name="isClientHidden" value="false">

            <div style="text-align: center;">
                <button type="submit" class="btn btn-primary" style="padding: 10px 20px; background-color: #007BFF; color: white; border: none; border-radius: 4px; cursor: pointer;">
                    Register
                </button>
            </div>
        </form>

        <div style="text-align: center; margin-top: 15px;">
            <p>Already have an account? <a href="/login" style="color: #007BFF;">Login here</a></p>
        </div>

        <script>
            document.getElementById('accountType').addEventListener('change', function() {
                document.getElementById('isClientHidden').value = this.value === 'client';
            });
        </script>

    </div>
</body>
</html>