<header class="site-header">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <img src="/resources/img/homeicon.png" alt="Home" width="30" height="30" class="d-inline-block align-top">
            </a>
            <!-- Search Bar Form -->
            <form class="d-flex" action="/search" method="GET">
              <input class="form-control me-2" style="padding: 3px 20px; font-size: 1rem;" type="search" name="searchQuery" placeholder="Search users..." required>
              <button class="btn btn-outline-success" style="padding: 3px 10px; font-size: 0.95rem;" type="submit">Search</button>
            </form>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="d-flex align-items-center ms-auto">
                <ul class="navbar-nav"> 
                  <!-- user signed in -->
                    {{#if user}}
                        <li class="nav-item">
                            <a class="nav-link" href="/messages">
                                <img src="/resources/img/messages.png" alt="Messages" width="30" height="30">
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/post">Post</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/profile">Profile</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/logout">Logout</a>
                        </li>
                    <!-- user not signed in -->
                    {{else}}
                        <li class="nav-item">
                            <a class="nav-link" href="/login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/register">Register</a>
                        </li>
                    {{/if}}
                </ul>
            </div>
        </div>
    </nav>
</header>